<html lang="en">

<head>
  <title>Tech Blog</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
</head>

<body>
  <div class="container">
    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">Tech Blog</a>
        </div>
        <div class="collapse navbar-collapse" id="myNavbar">
          <ul class="nav navbar-nav">
            <li class="active"><a href="/post">Post</a></li>
            <li class="active"><a href="/post/addpost">Add Post</a></li>
            <% if (userdata.role==='Admin' ){ %>
              <li class="active"><a href="/allusers">Admin</a></li>
              <%}%>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <li>
              <a href="/logoutuser"><span class="glyphicon glyphicon-log-out"></span> Logout</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <div class="row">
      <center>
        <h2>Hi <%= userdata.name %>, Edit post here
        </h2>
        <hr />
      </center>
      <div class="offset-md-5 col-md-5">
        <form action="/post/editpost/<%=data._id%>" method="POST">
          <div class="form-group">
            <label for="title">Title</label>
            <input name="title" class="form-control" id="title" value="<%=data.title%>" required/>
          </div>
          <div class="form-group">
            <label for="description">Description</label>
            <input name="description" class="form-control" id="description" value="<%=data.description%>" required/>
          </div>
          <div class="form-group">
            <label for="tags">Tag</label>
            <select name="tags" class="tags" >
              <option class="option" value="React">React</option>
              <option class="option" value="Node">Node</option>
              <option class="option" value="Python">Python</option>
              <option class="option" value="JavaScript">JavaScript</option>
            </select>
          </div>
          <p>Creator: <%= data.createdBy %></p>
          <button type="submit" class="btn btn-success">Submit Changes</button>
        </form>
      </div>
    </div>
  </div>
  <script>
    $('.tags').find('option[value='+ data.tags +']').attr('selected',true)
  </script>
</body>

</html>